@require './shared/_colour.styl'

// global
*
  box-sizing border-box !important

.global-header
  margin 0
  min-height 3.32rem
  padding 0.02rem 1.08rem 0 1.08rem
  border none
  background-color #454545
  box-shadow none
  div
    padding 0
  .logo
    margin 0.38rem 0 0.28rem 0.51rem
    padding 0
    float left
    img.logo-mark
      display inline-block
      margin 0.26rem 0.16rem 0.26rem 0.19rem
      padding 0
    span.logo-type
      display inline-block
      padding 0
      margin 0.51rem 0 0 0.72rem
      text-decoration none
      span.scroll
        color #f2f2f2
      span.iris
        color #a5a0ae
  .right.item
    float right
    display inline-block
    padding-top 0.98rem


#application
  main
    margin 0 0 0.9rem 0

    .nav
      .options, .actions
        padding-right 2rem
        .item
          color $gray2
          float right
          margin 0 0.33rem
        .item.disabled
          color $gray0
        .divider
          display inline-block
          margin 0 0.58rem

    .secondary.nav
      min-height 1.66rem
      background-color lighten(#f0ede6, 13%)

    .breadcrumb
      margin-left -0.54rem
      padding 0 1.87rem
      line-height 1.42rem
      font-size 1.09em
      a
        color $gray2
      i
        color lightgray
        color #fbfaf8
      span
        font-weight normal
