@import './shared/_colour.styl'
@import './shared/_article.styl'

article
  margin-top 0
  padding-top 0

  .extra.info
    padding 0.88rem 0 1.91rem 0
    margin 0
    .link,
    .badge
      width 50%
      min-height 1.6rem

    .link
      float left
      display inline-block
      padding-top 0.382rem

    .badge
      float right
      padding-right 0.26rem
      margin 0
      text-align right

  .outline
    margin 2.24rem 0 1.2rem 0

  article-components()


// options
.options
  .item.disabled
    svg
      use.icon
        fill lightgray

@media only screen and (max-width: 980px)
  /* same with large size (column-l-N) */
  .mobile.hidden
    display none !important
