@import '_colour.styl'

article-components()
  .meta
    h3
      margin 0 0 0.8em 0

  .outline
    color darken(pink, 26%)
    font-size 1.22rem
    line-height 1.43em
    margin 0.3rem 0 1.2rem 0

  .title
    font-size 1.68rem

  .subtitle
    font-size 1.21rem

  .published_at
    margin 0.11rem 0 0 0

  .caption
    display block
    color darkgray
    font-size  0.92rem
    font-weight bold
    margin 0 0 0 0.06em
    padding 0

  .license
    display inline-block
    margin 0.48rem 0

  .copy
    display block
    margin 0 0 0 0.06em

  p.tag
    margin-top 2rem
    color darkgray
    font-size 1.42rem
    span
      display inline-block
      margin-right 0.66rem

  .body
    font-size 1.46em
    margin-top 2.56rem
    margin-bottom 9rem

    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      padding 0
      color $gray2

    h1
      margin 0.89rem 0 0.12rem 0

    h2
      margin 0.82rem 0 0.11rem 0

    h3
      margin 0.68rem 0 0.10rem 0

    h4
      margin 0.59rem 0 0.9rem 0

    h5
      margin 0.55rem 0 0.8rem 0

    h6
      margin 0.55rem 0 0.8rem 0

    p
      line-height 1.66em
      margin 0.588rem 0
      padding 0
      color $black0

    p:first-letter
      text-transform uppercase
      line-height 1.66rem
      display inline-block
      //font-size 1.63rem
      //font-weight bold
      //padding 0 0.181rem 0 0

    code
      display inline-block
      padding 0.018em 0.36em
      border-radius 0.18em
      border 1px solid $gray2
      background $gray0

    pre > code
      line-height 1.56em
      background $gray2
      color $white0
